<%- include("partials/header.ejs") %>

<h1>Compose</h1>
<form action="/compose" class="composeForm" method="post">
    <div class="form-group">
        <label for="Title" class="form-label">Title</label>
        <input type="text" class="form-control" id="titleInput" name="title">
        <label for="Post" class="form-label">Post</label>
        <textarea name="post" class="form-control" id="postInput" cols="30" rows="5"></textarea>
    </div>
    <button type="submit" id="publishBtn" class="btn btn-primary" name="button">Publish</button>
</form>

